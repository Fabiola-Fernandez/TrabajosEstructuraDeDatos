

#include <iostream>
using namespace std;

int main() {
    // Declaramos un arreglo
    int numeros[] = {10, 20, 30, 40, 50};
    int longitud = sizeof(numeros) / sizeof(numeros[0]); // tamaño

    cout << "Recorrido con for:" << endl;
    for (int i = 0; i < longitud; i++) {
        cout << "Elemento en la posición " << i << ": " << numeros[i] << endl;
    }

    return 0;
}


