#include <iostream>
using namespace std;

int main() {
    int numeros[] = {100, 200, 300, 400, 500};
    int buscar = 300;
    bool encontrado = false;
    int n = sizeof(numeros) / sizeof(numeros[0]);

    for (int i = 0; i < n; i++) {
        if (numeros[i] == buscar) {
            cout << "Numero " << buscar << " encontrado en la posiciÃ³n: " << i << endl;
            encontrado = true;
            break;
        }
    }

    if (!encontrado) {
        cout << "Numero no encontrado." << endl;
    }

    return 0;
}
